@model IEnumerable<Product>
<form class="d-flex">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Cart: @ViewBag.Count</button>
</form>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    @foreach (var order in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <img height="100px"; width="100px"; src="@order.ImageUrl"></img>
                            @order.Title
                            <span class="badge bg-primary rounded-pill">@ViewBag.ProductCount[order.Id]</span>
                            <a asp-controller="Actions" asp-action="DeleteInCart" asp-route-id="@order.Id" class="btn btn-danger">DELETE</a>
                        </li>
                    }
                </ul>
                <p><b>Total:</b> @ViewBag.Total </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a asp-controller="Orders" asp-action="Create" class="btn btn-primary">Buy</a>
            </div>
        </div>
    </div>
</div>