@model Post
<div class="container-fluid tm-container-content tm-mt-60">
    <div class="row mb-4">
        <h2 class="col-12 tm-text-primary">@Model.Category.Name</h2>
    </div>
    <div class="row tm-mb-90">
        <div class="col-xl-8 col-lg-7 col-md-6 col-sm-12">
            <img src="@Model.ImageUrl" alt="Image" class="img-fluid">
        </div>
        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-12">
            <div class="tm-bg-gray tm-video-details">
                <h2 class="mb-4">
                    @Html.Raw(Model.Content)
                </h2>

                <div>
                    <h3 class="tm-text-gray-dark mb-3">Tags</h3>
                    @foreach (var item in Model.PostTags)
                    {
                        <a href="#" class="tm-text-primary mr-4 mb-2 d-inline-block">@item.Tag.Name</a>

                    }
                </div>
            </div>
        </div>
    </div>
</div> <!-- container-fluid, tm-container-content -->